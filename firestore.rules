rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /categories/{id} {
      allow read, write: if request.auth.uid == request.resource.data.userId
    }

    match /{document=**} {
      allow read: if request.auth.uid != null;
			allow write: if request.auth.uid != null;
    }
  }
}